.container{style: 'margin-top: 60px;'}
  .row
    .col-md-4.col-md-offset-4
      .panel.panel-default
        .panel-heading
          %strong Login
        .panel-body
          %form.form-horizontal{:role => "form"}
            = simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
              .form-group
                %label.col-sm-3.control-label Email
                .col-sm-9
                  = f.input :email, required: false, autofocus: true, label: false
              .form-group
                %label.col-sm-3.control-label Password
                .col-sm-9
                  = f.input :password, required: false, label: false
              .form-group
                .col-sm-9.col-sm-offset-1
                  = f.input :remember_me, as: :boolean if devise_mapping.rememberable?
              .form-group.last
                .col-sm-9
                  = f.button :submit, "Log in"

            = render "devise/shared/links"


