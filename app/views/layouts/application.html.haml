      <meta name="google-site-verification" content="VRG2C_vEaXN-BEUQuJSacIFybJqpbZbOCY37DiAHsds" />

  %body{"data-offset" => "400", "data-spy" => "scroll", "data-target" => "#main-nav"}

    #page-loader
      %h1.loader-logo
        Skorpion
        %span / Software
      %span.page-loader-gif

    #backgrounds{"data-backgrounds" => "assets/bg1.jpg,assets/bg2.jpg,assets/bg3.jpg"}
    #color-overlay

    = render 'layouts/navigation'
    = yield
    = render 'layouts/footer'


